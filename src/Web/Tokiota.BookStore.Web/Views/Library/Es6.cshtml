@{
    ViewBag.Title = "Library";
}
<article>

    <section>
        <h1>Library ES6</h1>
    </section>
    <section class="content row">
        <div class="authors col-md-3">
            <fieldset class="create">
                <label>Name</label> <br/>
                <input type="text" id="authorName"/>
                <button id="btnCreateAuthor" class="modal-default-button">Create</button>
            </fieldset>
            <h5>Authors</h5>
            <ul></ul>
        </div>
        <div class="books col-md-3">
             <fieldset class="create">
                <label>Name</label> <br/>
                <select id="authorsForBooks"></select><br/>
                <select id="seriesForBooks"></select><br/>
                <input type="text" id="bookName"/>
                <button id="btnCreateBook" class="modal-default-button">Create</button>
            </fieldset>
            <h5>Books</h5>
            <ul></ul>
        </div>
        <div class="series col-md-3">
             <fieldset class="create">
                <label>Name</label> <br/>
                <select id="authorsForSeries"></select><br/>
                <input type="text" id="serieName"/>
                <button id="btnCreateSerie" class="modal-default-button">Create</button>
            </fieldset>
            <h5>Series</h5>
            <ul></ul>
        </div>
    </section>
</article>

@section scripts{
    <script src="~/js/$ajaxHelper.js"></script>
    <script src="~/js/app/modules/libraryEs6.js"></script>
}
